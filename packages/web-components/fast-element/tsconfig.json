{
    "extends": "../../../tsconfig.json",
    "compilerOptions": {
        "rootDir": "src",
        "declarationDir": "dist/dts",
        "outDir": "dist/esm",
        "importsNotUsedAsValues": "error",
        "ignoreDeprecations": "5.0",
        "experimentalDecorators": true,
        "noImplicitAny": false,
        "strictPropertyInitialization": false,
        "target": "es2015",
        "module": "ESNext",
        "types": [
            "mocha",
            "webpack-env",
            "web-ie11"
        ],
        "lib": [
            "DOM",
            "ES2015",
            "ES2016.Array.Include"
        ]
    },
    "include": ["src"]
}
